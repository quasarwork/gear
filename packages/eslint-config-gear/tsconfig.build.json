{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo/build.tsbuildinfo",
    "outDir": "./dist/esm",
    "declarationDir": "./dist/dts",
    "stripInternal": true,
    "rootDir": "./src"
  },
  "exclude": [
    "**/node_modules/*",
    "**/dist/*",
    "**/build/*",
    "*.gadget",
    "eslint.config.mjs"
  ]
}
