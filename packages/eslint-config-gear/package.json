{
  "name": "@quasarwork/eslint-config-gear",
  "version": "1.0.1",
  "description": "Opinionated ESLint configuration for Quasar.work's Gear projects",
  "keywords": [
    "eslint",
    "eslintconfig",
    "quasarwork",
    "gear"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/quasarwork/gear.git",
    "directory": "packages/eslint-config-gear"
  },
  "license": "MIT",
  "author": {
    "name": "AurÃ©lien BOBENRIETH",
    "url": "https://quasar.work"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/dts/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "yarn clean:dist && yarn build:esm && yarn build:annotate && yarn build:cjs",
    "build:annotate": "babel ./dist/esm --plugins annotate-pure-calls --out-dir ./dist/esm --source-maps",
    "build:cjs": "babel ./dist/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir ./dist/cjs --source-maps",
    "build:esm": "tsc -b ./tsconfig.build.json --force && tsc-alias -p tsconfig.build.json",
    "clean:dist": "rimraf ./dist",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:inspect:config": "eslint --inspect-config .",
    "tidy": "yarn lint:fix && yarn format:write"
  },
  "prettier": "@quasarwork/gear-prettier-config",
  "dependencies": {
    "@eslint/js": "^9.9.1",
    "eslint": "^9.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.2.0"
  },
  "devDependencies": {
    "@types/eslint__js": "^8.42.3",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "@quasarwork/gear-prettier-config": "*",
    "@quasarwork/gear-tsconfig": "*",
    "eslint": ">= 9"
  },
  "publishConfig": {
    "access": "public"
  }
}
