{
  "name": "@quasarwork/gear",
  "version": "0.2.0",
  "description": "Gear is a toolbox helping you to build Shopify apps with the Gadget platform.",
  "keywords": [
    "gadget",
    "effect",
    "shopify",
    "quasarwork",
    "gear"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/quasarwork/gear.git",
    "directory": "packages/gear"
  },
  "license": "MIT",
  "author": {
    "name": "Aur√©lien BOBENRIETH",
    "url": "https://quasar.work"
  },
  "type": "module",
  "imports": {
    "#common/*": "./progLangExtensions/*.ts",
    "#server/*": "./api/*.ts"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/dts/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "yarn build:esm && yarn build:annotate && yarn build:cjs ",
    "build:annotate": "babel ./dist/esm --plugins annotate-pure-calls --out-dir ./dist/esm --source-maps",
    "build:cjs": "babel ./dist/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir ./dist/cjs --source-maps",
    "build:esm": "tsc -b ./tsconfig.build.json --force && tsc-alias -p tsconfig.build.json",
    "clean:dist": "rimraf ./dist",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:it": "vitest .it-test.ts",
    "test:ut": "vitest .test.ts",
    "tidy": "yarn types:check && yarn lint:fix && yarn format:write",
    "types:check": "tsc --noEmit"
  },
  "prettier": "@quasarwork/gear-prettier-config",
  "dependencies": {
    "@akashrajpurohit/snowflake-id": "^2.0.0",
    "@effect/schema": "^0.71.0",
    "effect": "^3.6.4",
    "pino": "^9.3.2"
  },
  "devDependencies": {
    "@effect/vitest": "^0.8.5",
    "@quasarwork/eslint-config-gear": "*",
    "@quasarwork/gear-prettier-config": "*",
    "@quasarwork/gear-tsconfig": "*",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vite": "^5.4.1",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "@akashrajpurohit/snowflake-id": "^2.0.0",
    "@effect/schema": "^0.71.0",
    "effect": "^3.6.4",
    "pino": "^9.3.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
