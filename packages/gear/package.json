{
  "name": "@quasarwork/gear",
  "version": "0.6.0",
  "description": "Gear is a toolbox helping you to build Shopify apps with the Gadget platform.",
  "keywords": [
    "gadget",
    "effect",
    "shopify",
    "quasarwork",
    "gear"
  ],
  "homepage": "https://github.com/quasarwork/gear/tree/main/packages/gear",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quasarwork/gear.git",
    "directory": "packages/gear"
  },
  "license": "MIT",
  "author": {
    "name": "Aur√©lien BOBENRIETH",
    "url": "https://quasar.work"
  },
  "type": "module",
  "imports": {
    "#*": {
      "production": "./dist/*/*",
      "default": "./*"
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/dts/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./*": {
      "types": "./dist/dts/*/index.d.ts",
      "import": "./dist/esm/*/index.js",
      "default": "./dist/cjs/*/index.js"
    }
  },
  "scripts": {
    "build": "yarn clean:dist && yarn build:esm && yarn build:annotate && yarn build:cjs ",
    "build:annotate": "babel ./dist/esm --plugins annotate-pure-calls --out-dir ./dist/esm --source-maps",
    "build:cjs": "babel ./dist/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir ./dist/cjs --source-maps",
    "build:esm": "tsc -b ./tsconfig.build.json --force",
    "clean:dist": "rimraf ./dist",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "yarn test:ut && yarn test:it",
    "test:it": "vitest .it-test.ts",
    "test:ut": "vitest .test.ts",
    "tidy": "yarn types:check && yarn lint:fix && yarn format:write",
    "types:check": "tsc --noEmit"
  },
  "prettier": "@quasarwork/gear-prettier-config",
  "peerDependencies": {
    "@akashrajpurohit/snowflake-id": "^2.0.0",
    "@effect/schema": "^0.72.0",
    "effect": "^3.7.0",
    "pino": "^9.3.2",
    "transliteration": "^2.3.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
