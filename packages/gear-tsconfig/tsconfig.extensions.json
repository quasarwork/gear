{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Gear (extensions)",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2015",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "lib": ["es2015", "dom"],
    "types": ["@shopify/app-bridge-types", "vite/client"]
  },
  "exclude": [
    "${configDir}/node_modules/*",
    "${configDir}/dist/*",
    "${configDir}/build/*",
    "*.gadget",
    "${configDir}/../api/*",
    "${configDir}/../web/*"
  ]
}
