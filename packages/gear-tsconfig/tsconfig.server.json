{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Gear (server)",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "paths": {
      "#common/*": ["${configDir}/common/*"],
      "#server/*": ["${configDir}/api/*"]
    }
  },
  "exclude": [
    "**/node_modules/*",
    "**/dist/*",
    "**/build/*",
    "*.gadget",
    "${configDir}/web/*",
    "${configDir}/extensions/*"
  ]
}
