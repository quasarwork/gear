{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Gear (client)",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "types": ["@shopify/app-bridge-types", "vite/client"]
  },
  "exclude": [
    "**/node_modules/*",
    "**/dist/*",
    "**/build/*",
    "*.gadget",
    "${configDir}/../api/*",
    "${configDir}/../extensions/*"
  ]
}
