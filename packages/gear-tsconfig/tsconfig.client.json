{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Gear (client)",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "types": ["@shopify/app-bridge-types", "vite/client"],
    "paths": {
      "#client/*": ["${configDir}/*"]
    }
  },
  "exclude": ["${configDir}/../api/*", "${configDir}/../extensions/*"]
}
